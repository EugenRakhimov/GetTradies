 <div class="container">
  <div class="bs-component" style="margin-bottom: 15px;">
    <a href="#" class="btn btn-default top-btn" style="float: left;">Search</a>
    <a href="#" class="btn btn-default top-btn" style="float: right;">Filter</a>
  </div>
  <% @jobs.each do |job| %>
  <div class="col-md-8">
    <a href=<%= job_path(job.id) %> id="job_<%= job.id %>">
      <img src="images/job_pic.jpg" class="big-image">
      <div class="panel panel-primary">

        <div class="panel-heading">
          <h3 class="panel-title">Job Description
          </h3>
          <p><%= job.short_desc %></p>
        </div>

        <div class="panel-body">
          <p></p>
        </div>

      </div>
    </a>
    <div class="location">
      <p>Location: <%=job.location %> </p>
    </div>

    <div>
      <a href=<%= %> class="btn btn-primary btn-lg btn-interest" >Show Interest</a>
    </div>
  </div>
  <% end %>
</div>
