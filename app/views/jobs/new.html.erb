<div class="row">
  <div class="row"><h1>Please describe your job here</h1></div>
    <div class="row">
      <div class = "col-md-5 col-md-offset-1 col-xs-12">
        <%= form_for @job, html: {multipart: true, class:"form-horizontal"} do |f|  %>
        <div class="form-group">
          <img src="/images/job_pic.png" alt="Job pic" class="img-rounded img-responsive">
        </div>
        <div class="form-group">
          <%=f.label :image, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%=f.file_field :image, class:"btn btn-primary btn-lg active" %>
          </div>
        </div>
        <div class="form-group">
          <%=f.label :title, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%=f.text_field :title, class:"form-control"%>
          </div>
        </div>
        <div class="form-group">
          <!-- <label for="inputDescription" class="col-sm-2 control-label">Description</label> -->
          <%=f.label :description, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%=f.text_area :description, class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%=f.label :location, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%=f.text_field :location, class:"form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <!-- <a type="button" class="btn btn-primary btn-lg active" href="job_list.html">Post job</a> -->
            <%=f.submit "Post job", class:"btn btn-primary btn-lg active"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
