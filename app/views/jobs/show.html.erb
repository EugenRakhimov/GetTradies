<div class="container">
  <div class="col-md-8">
    <img src="/images/job_pic.png" class="big-image">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Job Description: <%=@job.title%></h3>
      </div>
      <div class="panel-body">
        <p><%= @job.description %></p>
      </div>
    </div>
    <div class="location"><p>Location: <%=@job.location %> </p></div>
      <% if !@job_complete %>
        <% if @job.user == @current_user %>
           <div>
            <%= link_to 'Delete job', job_path(@job), method: :delete, class:"btn btn-primary btn-lg btn-interest" %>
            <% if @accepted_tender %>
              <div>
                <a href="<%=@job.id%>/ratings/new" class="btn btn-primary btn-lg btn-interest">Rate Your Job</a>
              </div>
            <% end %>
          </div>
          <% if @accepted_tender  %>
            <p>Tradie username: <%= User.find(@accepted_tender.user_id).username %></p>
            <p>Tradie rating: <%= User.find(@accepted_tender.user_id).rating %></p>
            <p>Tradie email: <%= User.find(@accepted_tender.user_id).email %></p>
            <p>Tradie address: <%= User.find(@accepted_tender.user_id).address %></p>
            <p class="btn btn-success btn-sm">Accepted</p><a href="../users/<%=@accepted_tender.user_id%>" class="btn btn-info btn-sm">View Profile</a>
          <% end %>
          <% if @tenders%>
            <% @tenders.each do |tender| %>
              <br>
              <p>Tradie username: <%= User.find(tender.user_id).username %></p>
              <p>Tradie rating: <%= User.find(tender.user_id).rating %></p>
              <% if @tender_changeable %>
                <%= link_to 'Accept Tender', tender_path(tender.id), method: :patch, class:"btn btn-info" %>
              <% end %>
            <% end %>
          <% end %>

        <% else %>

          <% if @current_user && !@job.tenders.find_by_user_id(@current_user.id) %>
            <div>
              <%= link_to 'Show Interest', job_tenders_path(@job), method: :post, class:"btn btn-primary btn-lg btn-interest" %>
            </div>
          <% else %>
            <%= link_to 'Applied job', job_path(@job), class:"btn btn-primary btn-lg btn-interest" %>
          <% end %>

        <% end %>
      <% else %>
        <p>Job complete. Job rating: <%= @accepted_tender.rating  %></p>
      <% end %>
   </div>
</div>
