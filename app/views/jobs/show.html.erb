<div class="container">
  <div class="col-md-8">
    <img src="/images/job_pic.png" class="big-image">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Job Description: <%=@job.title%></h3>
      </div>
      <div class="panel-body">
        <p><%= @job.description %></p>
      </div>
  </div>
  <div class="location"><p>Location: <%=@job.location %> </p></div>
    <div><a href="my_jobs_tradie.html" class="btn btn-primary btn-lg btn-interest">Show Interest</a></div>
      <% if @job.user_id == session[:user_id] && @accepted_tender%>
        <br>
        <div><a href="<%=@job.id%>/ratings/new" class="btn btn-primary btn-lg btn-interest">Rate Your Job</a></div>
      <% end %>
      <% if @job.user_id == session[:user_id] && @tenders%>
        <% @tenders.each do |tender| %>
          <br>
          <p>Tradie email: <%= User.find(tender.user_id).email %></p>
          <p>Tradie username: <%= User.find(tender.user_id).username %></p>
          <p>Tradie address: <%= User.find(tender.user_id).address %></p>
          <% if tender.accepted == true %>
          <p class="btn btn-success btn-sm">Accepted</p>
          <% end %>
        <% end %>
      <% end %>
    </div>
   </div>
</div>
