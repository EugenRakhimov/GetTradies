<form method="post" action="/users" class="form-horizontal">
  <fieldset>
    <legend>Sign up</legend>
    <label for="email">Email:</label>
    <input id="email" name="email" type="email" placeholder="Please enter your email" required class="form-control" />
    <label for="password">Password:</label>
    <input id="password" name="password" type="password" placeholder="Please enter a password" required class="form-control" />
    <label for="password_confirm">Confirm password</label>
    <input id="password_confirm" name="password_confirm" type="password" placeholder="Please re-enter your password" required class="form-control" />
    <input type="submit" value="Sign up" class="btn btn-info btn-sm">
  </fieldset>
</form>
