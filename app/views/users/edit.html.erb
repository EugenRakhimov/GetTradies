<div class="users edit">
  <h2>Update user profile</h2>

<%= form_for @user do |f| %>

  <%= f.label :username  %>:
  <%= f.text_field :username, required: true, placeholder: "Please enter your user name" %>
  <%= f.label :given_name  %>:
  <%= f.text_field :given_name, required: true, placeholder: "Please enter your given name" %><br />
  <%= f.label :family_name  %>:
  <%= f.text_field :family_name, required: true, placeholder: "Please enter your family name" %><br />
  <%= f.label :email  %>:
  <%= f.text_field :email, required: true, placeholder: "Please enter your email address" %><br />
  <%= f.label :address  %>:
  <%= f.text_field :address, required: true, placeholder: "Please enter your address" %><br />
  <%= f.label :phone_number  %>:
  <%= f.text_field :phone_number, required: true, placeholder: "Please enter your phone number" %><br />
  <%= f.label :profession  %>:
  <%= f.text_field :profession, required: true, placeholder: "Please enter your profession" %><br />

   <%= f.submit %>
<% end %>
