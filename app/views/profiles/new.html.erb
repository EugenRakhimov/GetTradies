<% @user = User.new %>

<%= form_for @user do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name, required: true, placeholder: "Please enter your full name" %><br />

  <%= f.label :phone_number %>:
  <%= f.text_field :phone_number, required: true, placeholder: "Please enter your phone number" %><br />

  <%= f.label :address %>:
  <%= f.text_area :address, rows: 4, required: true, placeholder: "Please enter your full address: Street number and name, Town or Suburb, City or Region" %>

  <%= f.submit "Send message", class: "btn btn-info btn-sm"%>
<% end %>
