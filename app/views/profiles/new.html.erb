
<% @user = 3 %>

<%= form_for(:profile, :url => {:action => 'create', :user_id => @user}) do |f| %>
  <%= f.label :given_name %>:
  <%= f.text_field :given_name, required: true, placeholder: "Please enter your given name" %><br />

  <%= f.label :family_name %>:
  <%= f.text_field :family_name, required: true, placeholder: "Please enter your family name" %><br />

  <%= f.label :phone_number %>:
  <%= f.text_field :phone_number, required: true, placeholder: "Please enter your phone number" %><br />

  <%= f.label :address %>:
  <%= f.text_area :address, rows: 4, required: true, placeholder: "Please enter your full address: Street number and name, Town or Suburb, City or Region" %>

  <%= f.submit "Save", class: "btn btn-info btn-sm"%>
<% end %>